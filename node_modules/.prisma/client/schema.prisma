generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())

  @@map("users")
}

enum Role {
  ADMIN
  CLIENT
}

model Reservation {
  id        String   @id @default(uuid())
  date      DateTime
  time      String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  payment   Payment?
}

model Payment {
  id            String      @id @default(uuid())
  status        String
  amount        Float
  transactionId String?
  createdAt     DateTime    @default(now())
  reservationId String      @unique
  reservation   Reservation @relation(fields: [reservationId], references: [id])
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  type        String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
